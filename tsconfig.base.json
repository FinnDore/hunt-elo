{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",

        "paths": {
            "@hunt-elo/utils": ["libs/utils/src/index.ts"],
            "tslib": ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
